{
    "name": "php-translation/laravel",
    "description": "Laravel integration for PHP-translation",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "php-translation/extractor": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.5 || ^5.4"
    },
    "autoload": {
        "psr-4": {
            "Translation\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Translation\\Laravel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}

